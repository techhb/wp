<!-- Notes -->
<div class="notes">
  <h3>üí° Rest Day Tips</h3>
  <ul>
    <li><strong>Don't skip protein</strong> ‚Äî your muscles repair on rest days</li>
    <li><strong>Sleep is gains</strong> ‚Äî prioritize 7-8 hours, especially at 45</li>
    <li><strong>If you're very sore</strong> ‚Äî skip the core work, just do mobility</li>
    <li><strong>Walking is underrated</strong> ‚Äî 10-15 min improves recovery and mood</li>
    <li><strong>Foam rolling</strong> ‚Äî optional, but great for quads, glutes, and lats</li>
  </ul>
</div>

<script>
const exercises = [
  { name: "Cat-Cow Stretch", duration: 45 },
  { name: "World's Greatest Stretch (Left)", duration: 45 },
  { name: "World's Greatest Stretch (Right)", duration: 45 },
  { name: "Hip 90/90 Stretch (Left)", duration: 45 },
  { name: "Hip 90/90 Stretch (Right)", duration: 45 },
  { name: "Shoulder Pass-Throughs", duration: 45 },
  { name: "Hip Flexor Stretch (Left)", duration: 45 },
  { name: "Hip Flexor Stretch (Right)", duration: 45 },
  { name: "Lying Glute Stretch (Both Sides)", duration: 90 },
  { name: "Chest Doorway Stretch", duration: 45 },
  { name: "Dead Bugs", duration: 45 },
  { name: "Bird Dogs", duration: 45 },
  { name: "Plank Hold", duration: 40 },
  { name: "Child's Pose (Finish)", duration: 45 }
];

let currentExerciseIndex = 0;
let timeRemaining = exercises[0].duration;
let timerInterval = null;
let isRunning = false;

function updateDisplay() {
  const mins = Math.floor(timeRemaining / 60);
  const secs = timeRemaining % 60;
  document.getElementById('timerDisplay').textContent = `${mins}:${secs.toString().padStart(2, '0')}`;
  document.getElementById('currentExercise').textContent = exercises[currentExerciseIndex].name;
  document.getElementById('exerciseNum').textContent = currentExerciseIndex + 1;
  
  const totalExercises = exercises.length;
  const progress = ((currentExerciseIndex) / totalExercises) * 100;
  document.getElementById('progressFill').style.width = progress + '%';
}

function startTimer() {
  if (isRunning) return;
  isRunning = true;
  timerInterval = setInterval(() => {
    timeRemaining--;
    if (timeRemaining <= 0) {
      nextExercise();
    }
    updateDisplay();
  }, 1000);
}

function pauseTimer() {
  isRunning = false;
  clearInterval(timerInterval);
}

function nextExercise() {
  currentExerciseIndex++;
  if (currentExerciseIndex >= exercises.length) {
    pauseTimer();
    document.getElementById('currentExercise').textContent = "üéâ Done! Great work!";
    document.getElementById('timerDisplay').textContent = "0:00";
    document.getElementById('progressFill').style.width = '100%';
    return;
  }
  timeRemaining = exercises[currentExerciseIndex].duration;
  updateDisplay();
}

function resetTimer() {
  pauseTimer();
  currentExerciseIndex = 0;
  timeRemaining = exercises[0].duration;
  updateDisplay();
}

updateDisplay();
</script>

</body>
</html>
